{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rust: cargo build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rust: cargo run",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--",
                "CREATE DATABASE test"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "rust: cargo test",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
